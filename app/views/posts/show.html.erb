<div class="row">
    <div class="col-md-4">
            <%= image_tag @post.post_img.url(:post_show) %>
    </div>
    <div class="col-md-8">
        <h2>
            <%= @post.title %>
        </h2>
        <h3>
            <%= @post.body %>
        </h3>
    
    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
    </div>
    <%= link_to "Back", root_path %>
    <% if user_signed_in? %>
        <% if @post.user_id == current_user.id %>
        <%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure that you actually want to delete this post ?"} %>
        <% end %>
    <% end %>
</div>