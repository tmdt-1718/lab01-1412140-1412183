<%= simple_form_for(@post, html: {class: 'form-horizontal', multipart: 'true'}) do |f| %>
<%= select_tag(:category_post_id, options_for_select(@categories), :prompt => "Select a category") %>    
<%= f.input :title, label: "Post Title" %>
    <%= f.input :body %> 
    <%= f.button :submit %>
<% end %>