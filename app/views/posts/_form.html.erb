<%= simple_form_for(@post, html: {class: 'form-horizontal', multipart: 'true'}) do |f| %>
<%= select_tag(:category_id, options_for_select(@categories), :class => "form-control", :prompt => "Select a category") %>
<%= f.file_field :image, :class => "btn btn-default btn-file imgChooser" %>
<%= f.input :title, label: "Post Title" %>
<%= f.input :body %> 
<%= f.button :submit %>
<% end %>