<div class="row">
    <div class="container">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="#">Home</a></li>
            <li class="active"><span>Post</span></li>
        </ol>
    </div>
</div>
<div class="row">
    <% if user_signed_in? %>
    <div class="container">
            <div class="col-lg-12">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            <h3 class="panel-title">Want to create a new</h3>
                            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
                        </div>
                        <div class="panel-body" id="createPost">
                                <%= button_to("Create Post", new_post_path, method: :get, :class => "btn btn-default") %>
                        </div>
                    </div>
                </div>
    </div>
    <% end %>
    <h1 class="current-category">
            <%= params[:category] %>
        </h1>
    <% if @post.count == 0 %>
        <h1>There are currently no posts</h1>
        <% else %>
            <div class="row">
                <% @post.each do |post| %>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12">
                                <% if post.image_url %>
                                <%= image_tag post.image_url,:class => "img-responsive" %> 
                                <% end %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 title">
                            <h3><%= link_to post.title, post_path(post) %></h3>
                            <p><i class="glyphicon glyphicon-user"></i> <%= post.user.email.split(/#|@/).first %></p>
                            <p><i class="glyphicon glyphicon-eye-open"></i>
                                <% if post.view %>
                                <%= post.view %> views
                                <% else %>
                                0 view
                                <% end %>
                            </p>
                        </div>
                        <div class="col-lg-6 detail">
                                <%= truncate(post.body,length:100,separator: ' ') %>
                        </div>
                    </div>

                </div>
                <% end %>
            </div>
            <% end %>
</div>