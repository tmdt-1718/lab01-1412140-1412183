<div class="container">
    <% if user_signed_in? %>
    <div class="row">
            <div class="col-lg-12">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            <h3 class="panel-title">Want to create a new</h3>
                            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
                        </div>
                        <div class="panel-body" id="createPost">
                                <%= button_to("Create Post", new_post_path, method: :get, :class => "btn btn-default") %>
                        </div>
                    </div>
                </div>
    </div>
    <% end %>
    <h1 class="current-category">
            <%= params[:category] %>
        </h1>
    <% if @post.count == 0 %>
        <h1>There are currently no posts</h1>
        <% else %>
            <div class="row">
                <% @post.each do |post| %>
                <div class="col-lg-3">
                        <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><%= link_to post.title, post_path(post) %></h3>
                                </div>
                                <div class="panel-body">
                                        <%= truncate(post.body,length:100,separator: ' ') %>
                                </div>
                        </div>
                </div>
                <% end %>
            </div>
            <% end %>
</div>